<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Bóng -->
    <item android:right="4dp" android:left="4dp" android:top="4dp" android:bottom="4dp">
        <shape >
            <solid android:color="#80000000"/> <!-- Màu đen mờ tạo bóng -->
            <corners android:radius="16dp"/> <!-- Đặt góc cong cho bóng -->
        </shape>
    </item>

    <!-- Viền -->
    <item>
        <shape >
            <solid android:color="@android:color/white"/> <!-- Màu nền của CardView -->
            <stroke android:color="@color/material_on_background_disabled" android:width="1dp"/> <!-- Viền màu xám -->
            <corners android:radius="16dp"/> <!-- Đặt góc cong cho viền -->
        </shape>
    </item>
</layer-list>