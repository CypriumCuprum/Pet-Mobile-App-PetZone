<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Button fill color -->
    <solid android:color="#4CAF50" /> <!-- Default green color, you can change this -->

    <!-- Corner radius for rounded corners -->
    <corners android:radius="20dp" />

    <!-- Optional: Add padding inside the button -->
    <padding
        android:left="16dp"
        android:right="16dp"
        android:top="8dp"
        android:bottom="8dp" />

    <!-- Optional: Add a border around the button -->
    <!--
    <stroke
        android:width="1dp"
        android:color="#2E7D32" />
    -->
</shape>