<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="PetDetailStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:textAlignment">center</item>
        <item name="android:padding">8dp</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="StatusCardStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="cardCornerRadius">8dp</item>
        <item name="cardElevation">2dp</item>
        <item name="android:padding">12dp</item>
    </style>

    <style name="CustomTopBarStyle" parent="Widget.AppCompat.ActionBar.Solid">
        <item name="android:background">@color/bg_main_color</item>
        <item name="titleTextStyle">@style/TopBarTitleStyle</item>
        <item name="navigationIcon">@drawable/left_arrow</item>
        <item name="android:elevation">4dp</item>
    </style>

    <style name="TopBarTitleStyle" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:fontFamily"></item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
    </style>
</resources>