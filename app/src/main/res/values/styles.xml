<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="PetDetailStyle">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textAlignment">center</item>
        <item name="android:padding">4dp</item>
        <item name="android:textSize">15sp</item>
        <item name="android:fontFamily">@font/fredoka_regular</item>
        <item name="android:textColor">#32323D</item>
    </style>

    <style name="PetDetailText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textAlignment">center</item>
        <item name="android:padding">4dp</item>
        <item name="android:textSize">15sp</item>
        <item name="android:fontFamily">@font/fredoka_medium</item>
        <item name="android:textColor">#064E57</item>
    </style>

    <style name="StatusCardStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="cardCornerRadius">8dp</item>
        <item name="cardElevation">2dp</item>
        <item name="android:padding">12dp</item>
    </style>

    <style name="CustomTopBarStyle" parent="Widget.AppCompat.ActionBar.Solid">
        <item name="android:background">@color/bg_main_color</item>
        <item name="titleTextAppearance">@style/TopBarTitleStyle</item>
        <item name="navigationIcon">@drawable/left_arrow</item>
        <item name="menu">@menu/topbar_menu</item>
        <item name="android:elevation">4dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">90dp</item>
    </style>

    <style name="TopBarTitleStyle" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:fontFamily">@font/fredoka_semibold</item>
        <item name="android:textSize">25sp</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Làm cho ứng dụng tràn viền -->
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
    </style>

<!--    <style name="BottomNavTextAppearance" parent="TextAppearance.MaterialComponents.Caption">-->
<!--        <item name="android:fontFamily">@font/font_for_bottom_nav</item>-->
<!--        <item name="android:textSize">14sp</item>-->
<!--        <item name="android:textColor">@color/text_white</item> &lt;!&ndash; Màu chữ &ndash;&gt;-->
<!--    </style>-->
    <style name="CustomNavigationBarStyle" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="android:background">@color/bg_main_color</item>
        <item name="itemIconTint">@color/text_white</item>
        <item name="itemTextColor">@color/text_white</item>
        <item name="fontFamily">@font/font_for_bottom_nav</item>
    </style>
    <style name="SearchViewTextStyle">
        <item name="android:textColor">#FF0000</item> <!-- Màu chữ đỏ -->
        <item name="android:textColorHint">#868689</item> <!-- Màu gợi ý xám -->
        <item name="android:fontFamily">@font/fredoka_medium</item> <!-- Font chữ -->
    </style>

    

    <style name="GreenSwitchStyle" parent="Widget.AppCompat.CompoundButton.Switch">
        <item name="colorControlActivated">#4CAF50</item>
    </style>


    <!-- Base application theme -->
    <style name="Theme.PetCare" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary_dark</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Secondary brand color -->
        <item name="colorSecondary">@color/accent</item>
        <item name="colorSecondaryVariant">@color/primary_dark</item>
        <item name="colorOnSecondary">@color/white</item>

        <!-- Status bar color -->
        <item name="android:statusBarColor">@color/primary_dark</item>

        <!-- Custom styles -->
        <item name="materialButtonStyle">@style/Widget.PetCare.Button</item>
        <item name="chipStyle">@style/Widget.PetCare.Chip</item>
    </style>

    <!-- Button style -->
    <style name="Widget.PetCare.Button" parent="Widget.MaterialComponents.Button">
        <item name="android:textAllCaps">false</item>
        <item name="cornerRadius">24dp</item>
    </style>

    <!-- Chip style -->
    <style name="Widget.PetCare.Chip" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="chipBackgroundColor">@color/chip_background_color</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>
</resources>