<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.petHealth.PetHealth">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <!-- Top Header with Pet Image and Name -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/pet_image"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:scaleType="centerCrop"
                android:src="@drawable/yellow_pomeranian"/>
            <ImageView
                android:id="@+id/edit_pet_information"
                android:layout_width="27dp"
                android:layout_height="27dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:layout_alignParentEnd="true"
                android:src="@drawable/health_note"/>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="4">
            <com.google.android.material.card.MaterialCardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="12dp"
                app:cardElevation="6dp"
                app:cardCornerRadius="25dp"
                app:strokeWidth="1dp"
                app:strokeColor="#000000"
                app:cardBackgroundColor="@android:color/white"
                android:layout_weight="4"
                >

                <LinearLayout
                    android:layout_width="280dp"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:weightSum="4"
                    android:padding="8dp">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:orientation="vertical"
                        android:layout_weight="4">

                        <TextView
                            android:id="@+id/pet_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="16dp"
                            android:text="@string/pet_name"
                            android:textColor="@color/text_black"
                            android:textSize="26sp"
                            android:fontFamily="@font/fredoka_bold"/>

                        <TextView
                            android:id="@+id/pet_breed"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="17.5dp"
                            android:fontFamily="@font/fredoka_medium"
                            android:text="@string/pet_breed"
                            android:textColor="#064E57"/>
                    </LinearLayout>
                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_margin="16dp"
                        android:background="@drawable/shape_gender"
                        android:src="@drawable/woman"
                        android:scaleType="centerInside"
                        />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>
            <com.google.android.material.card.MaterialCardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                app:cardElevation="6dp"
                app:cardCornerRadius="25dp"
                app:strokeWidth="1dp"
                app:strokeColor="#FFFFFF"
                app:cardBackgroundColor="@color/bg_main_color"
                android:layout_weight="1"
                android:layout_gravity="center"
                >

                <FrameLayout
                    android:layout_width="93dp"
                    android:layout_height="87dp">

                    <TextView
                        android:id="@+id/diary_navigate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:fontFamily="@font/fredoka_bold"
                        android:text="@string/diary"
                        android:textColor="@color/text_black"
                        android:textSize="16sp" />
                </FrameLayout>
            </com.google.android.material.card.MaterialCardView>
        </LinearLayout>

        <!-- Pet Details Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:src="@drawable/pet"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:text="@string/pet_information"
                    android:fontFamily="@font/fredoka_bold"
                    android:textColor="@color/text_black"
                    android:layout_gravity="center"
                    android:textSize="20sp"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:orientation="horizontal"
                android:weightSum="4"
                android:gravity="">

                <LinearLayout
                    android:layout_width="86dp"
                    android:layout_height="60dp"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="4dp"
                    android:background="@drawable/bg_pet_detail_color_corner_20dp">
                    <TextView
                        android:id="@+id/age_detail"
                        style="@style/PetDetailStyle"
                        android:text="Age"/>
                    <TextView
                        android:id="@+id/age_text"
                        style="@style/PetDetailText"
                        android:text="2m 2d"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="86dp"
                    android:layout_height="60dp"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:layout_marginStart="4dp"
                    android:layout_marginEnd="4dp"
                    android:background="@drawable/bg_pet_detail_color_corner_20dp">
                    <TextView
                        android:id="@+id/weight_detail"
                        style="@style/PetDetailStyle"
                        android:text="Weight"/>
                    <TextView
                        android:id="@+id/weight_text"
                        style="@style/PetDetailText"
                        android:text="2.2 kg"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="86dp"
                    android:layout_height="60dp"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:layout_marginStart="4dp"
                    android:layout_marginEnd="4dp"
                    android:background="@drawable/bg_pet_detail_color_corner_20dp">
                    <TextView
                        android:id="@+id/height_detail"
                        style="@style/PetDetailStyle"
                        android:text="Height"/>
                    <TextView
                        android:id="@+id/height_text"
                        style="@style/PetDetailText"
                        android:text="20 cm"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="86dp"
                    android:layout_height="60dp"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:layout_marginStart="4dp"
                    android:layout_marginEnd="8dp"
                    android:background="@drawable/bg_pet_detail_color_corner_20dp">
                    <TextView
                        android:id="@+id/color_detail"
                        style="@style/PetDetailStyle"
                        android:text="Color"/>
                    <TextView
                        android:id="@+id/color_text"
                        style="@style/PetDetailText"
                        android:text="Yellow"/>
                </LinearLayout>

            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="This is my first dog."
                android:layout_marginStart="8dp"
                android:layout_marginVertical="10dp"
                android:textColor="@color/text_black"
                android:fontFamily="@font/fredoka_light"
                android:textSize="14sp"/>
        </LinearLayout>

        </LinearLayout>
        <!-- Status Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:src="@drawable/smileys"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:text="@string/pet_status"
                    android:fontFamily="@font/fredoka_bold"
                    android:textColor="@color/text_black"
                    android:layout_gravity="center"
                    android:textSize="20sp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">
                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:background="@drawable/bg_main_color_corner_20dp"
                        android:src="@drawable/heart_circle"
                        android:layout_margin="10dp"
                        />
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="left|center"
                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Health"
                            android:fontFamily="@font/fredoka_medium"
                            android:textColor="@color/text_black"
                            android:textSize="10sp"/>
                        <TextView
                            android:id="@+id/health_status"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Satisfied"
                            android:fontFamily="@font/fredoka_regular"
                            android:textColor="@color/text_grey"
                            android:textSize="10sp"/>
                        <TextView
                            android:id="@+id/lst_vaccine_status"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Last Vacinated (17d ago)"
                            android:fontFamily="@font/fredoka_semibold"
                            android:textColor="@color/text_light_green"
                            android:textSize="8sp"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:background="@drawable/bg_main_color_4dp_corner"
                        android:layout_marginEnd="10dp"
                        android:paddingStart="8dp"
                        android:paddingEnd="8dp"
                        android:gravity="center"
                        >

                        <TextView
                            android:layout_width="70dp"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/fredoka_regular"
                            android:text="Check vet"
                            android:textColor="@color/text_white"
                            android:textSize="12sp" />
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/right_arrow"
                            android:layout_marginStart="4dp"
                            />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">
                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:background="@drawable/bg_main_color_corner_20dp"
                        android:src="@drawable/dog_food_icon"
                        android:layout_margin="10dp"
                        android:scaleType="centerInside"/>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="left|center"
                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Food"
                            android:fontFamily="@font/fredoka_medium"
                            android:textColor="@color/text_black"
                            android:textSize="10sp"/>
                        <TextView
                            android:id="@+id/food_status"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Satisfied"
                            android:fontFamily="@font/fredoka_regular"
                            android:textColor="@color/text_grey"
                            android:textSize="10sp"/>
                        <TextView
                            android:id="@+id/last_food_status"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Last Fed (1h ago)"
                            android:fontFamily="@font/fredoka_semibold"
                            android:textColor="@color/text_light_green"
                            android:textSize="8sp"/>
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/check_food_button"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:background="@drawable/bg_main_color_4dp_corner"
                        android:layout_marginEnd="10dp"
                        android:paddingStart="8dp"
                        android:paddingEnd="8dp"
                        android:gravity="center"
                        >
                        <TextView
                            android:layout_width="70dp"
                            android:layout_height="wrap_content"
                            android:text="Check food"
                            android:fontFamily="@font/fredoka_regular"
                            android:textColor="@color/text_white"
                            android:textSize="12sp"/>
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/right_arrow"
                            android:layout_marginStart="4dp"
                            />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
            <!-- Food Check Selector Form (Initially Gone) -->
            <LinearLayout
                android:id="@+id/food_check_form"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp"
                android:visibility="gone"
                android:background="@drawable/bg_white_rounded_corner_8dp">

                <!-- First Text Field -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginBottom="12dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Food Amount (grams)"
                        android:fontFamily="@font/fredoka_medium"
                        android:textColor="@color/text_black"
                        android:textSize="12sp"
                        android:layout_marginBottom="4dp"/>
                    <EditText
                        android:id="@+id/food_amount_input"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:background="@drawable/bg_edit_text_border"
                        android:paddingStart="12dp"
                        android:paddingEnd="12dp"
                        android:inputType="number"
                        android:hint="Enter food amount"
                        android:fontFamily="@font/fredoka_regular"
                        android:textSize="12sp"/>
                </LinearLayout>

                <!-- Second Text Field -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginBottom="16dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Feeding Time"
                        android:fontFamily="@font/fredoka_medium"
                        android:textColor="@color/text_black"
                        android:textSize="12sp"
                        android:layout_marginBottom="4dp"/>
                    <EditText
                        android:id="@+id/feeding_time_input"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:background="@drawable/bg_edit_text_border"
                        android:paddingStart="12dp"
                        android:paddingEnd="12dp"
                        android:inputType="time"
                        android:hint="Enter feeding time"
                        android:fontFamily="@font/fredoka_regular"
                        android:textSize="12sp"/>
                </LinearLayout>

                <!-- Submit Button -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <Button
                        android:id="@+id/cancel_button"
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:layout_weight="1"
                        android:text="Cancel"
                        android:layout_marginEnd="8dp"
                        android:background="@color/bg_grey"
                        android:textColor="@color/text_black"
                        android:fontFamily="@font/fredoka_medium"
                        android:textSize="12sp"/>
                    <Button
                        android:id="@+id/submit_button"
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:layout_weight="1"
                        android:text="Submit"
                        android:layout_marginStart="8dp"
                        android:background="@drawable/bg_main_color_4dp_corner"
                        android:textColor="@color/text_white"
                        android:fontFamily="@font/fredoka_medium"
                        android:textSize="12sp"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        <!-- Charts Placeholder -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:src="@drawable/chart"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:text="@string/health_statistics"
                    android:fontFamily="@font/fredoka_bold"
                    android:textColor="@color/text_black"
                    android:layout_gravity="center"
                    android:textSize="20sp"/>
            </LinearLayout>
        </LinearLayout>


    </LinearLayout>

</androidx.core.widget.NestedScrollView>