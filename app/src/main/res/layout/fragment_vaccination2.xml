<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F0F0F0"
    tools:context=".vaccination.vaccination2">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="8dp">

        <!-- Filter tabs -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="4dp">

            <Button
                android:id="@+id/btnAll"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:layout_marginEnd="4dp"
                android:text="All"
                android:textAllCaps="false"
                android:background="@drawable/green_rounded_button"
                android:textColor="#FFFFFF" />

            <Button
                android:id="@+id/btnCompleted"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:layout_marginEnd="4dp"
                android:text="Completed"
                android:textAllCaps="false"
                android:background="@drawable/gray_rounded_button"
                android:textColor="#000000" />

            <Button
                android:id="@+id/btnUpcoming"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:layout_marginEnd="4dp"
                android:text="Upcoming"
                android:textAllCaps="false"
                android:background="@drawable/gray_rounded_button"
                android:textColor="#000000" />

            <Button
                android:id="@+id/btnMissed"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:text="Missed"
                android:textAllCaps="false"
                android:background="@drawable/gray_rounded_button"
                android:textColor="#000000" />
        </LinearLayout>

        <!-- Scrollable content -->
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="4dp">

                <!-- First appointment card (Upcoming) -->
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="2dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="16dp">

                        <TextView
                            android:id="@+id/txtPetName1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="ROUDY"
                            android:textStyle="bold"
                            android:textSize="18sp"
                            android:textColor="#000000" />

                        <TextView
                            android:id="@+id/txtStatus1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:background="@drawable/yellow_rounded_background"
                            android:paddingStart="12dp"
                            android:paddingEnd="12dp"
                            android:paddingTop="4dp"
                            android:paddingBottom="4dp"
                            android:text="Upcoming"
                            android:textColor="#000000" />

                        <TextView
                            android:id="@+id/txtDate1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/txtPetName1"
                            android:text="May 24, 2025"
                            android:textColor="#444444" />

                        <TextView
                            android:id="@+id/txtTime1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/txtPetName1"
                            android:layout_alignParentEnd="true"
                            android:layout_marginEnd="10dp"
                            android:text="10:30"
                            android:textColor="#444444" />

                        <TextView
                            android:id="@+id/txtVaccine1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/txtDate1"
                            android:layout_marginTop="8dp"
                            android:text="Rabies Vaccine"
                            android:textStyle="bold"
                            android:textSize="16sp"
                            android:textColor="#000000" />

                        <TextView
                            android:id="@+id/txtClinic1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/txtVaccine1"
                            android:text="PetCare Veterinary Clinic"
                            android:textColor="#444444" />
                    </RelativeLayout>
                </androidx.cardview.widget.CardView>

                <!-- Second appointment card (Completed) -->
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="2dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="16dp">

                        <TextView
                            android:id="@+id/txtPetName2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="ROUDY"
                            android:textStyle="bold"
                            android:textSize="18sp"
                            android:textColor="#000000" />

                        <TextView
                            android:id="@+id/txtStatus2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:background="@drawable/green_rounded_background"
                            android:paddingStart="12dp"
                            android:paddingEnd="12dp"
                            android:paddingTop="4dp"
                            android:paddingBottom="4dp"
                            android:text="Completed"
                            android:textColor="#FFFFFF" />

                        <TextView
                            android:id="@+id/txtDate2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/txtPetName2"
                            android:text="December 15, 2024"
                            android:textColor="#444444" />

                        <TextView
                            android:id="@+id/txtTime2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/txtPetName2"
                            android:layout_alignParentEnd="true"
                            android:layout_marginEnd="10dp"
                            android:text="14:30"
                            android:textColor="#444444" />

                        <TextView
                            android:id="@+id/txtVaccine2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/txtDate2"
                            android:layout_marginTop="8dp"
                            android:text="FHV-FCV Vaccine (Rhinotracheitis, Calicivirus)"
                            android:textStyle="bold"
                            android:textSize="16sp"
                            android:textColor="#000000" />

                        <TextView
                            android:id="@+id/txtClinic2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/txtVaccine2"
                            android:text="PetCare Veterinary Clinic"
                            android:textColor="#444444" />
                    </RelativeLayout>
                </androidx.cardview.widget.CardView>

                <!-- Third appointment card (Missed) -->
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="2dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="16dp">

                        <TextView
                            android:id="@+id/txtPetName3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="FURRY"
                            android:textStyle="bold"
                            android:textSize="18sp"
                            android:textColor="#000000" />

                        <TextView
                            android:id="@+id/txtStatus3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:background="@drawable/red_rounded_background"
                            android:paddingStart="12dp"
                            android:paddingEnd="12dp"
                            android:paddingTop="4dp"
                            android:paddingBottom="4dp"
                            android:text="Missed"
                            android:textColor="#FFFFFF" />

                        <TextView
                            android:id="@+id/txtDate3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/txtPetName3"
                            android:text="February 20, 2024"
                            android:textColor="#444444" />

                        <TextView
                            android:id="@+id/txtTime3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/txtPetName3"
                            android:layout_alignParentEnd="true"
                            android:layout_marginEnd="10dp"
                            android:text="07:00"
                            android:textColor="#444444" />

                        <TextView
                            android:id="@+id/txtVaccine3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/txtDate3"
                            android:layout_marginTop="8dp"
                            android:text="FPLV Vaccine (Panleukopenia)"
                            android:textStyle="bold"
                            android:textSize="16sp"
                            android:textColor="#000000" />

                        <TextView
                            android:id="@+id/txtClinic3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/txtVaccine3"
                            android:text="PetCare Veterinary Clinic"
                            android:textColor="#444444" />
                    </RelativeLayout>
                </androidx.cardview.widget.CardView>

                <!-- Fourth appointment card (Completed) -->
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="2dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="16dp">

                        <TextView
                            android:id="@+id/txtPetName4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="BELLA"
                            android:textStyle="bold"
                            android:textSize="18sp"
                            android:textColor="#000000" />

                        <TextView
                            android:id="@+id/txtStatus4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:background="@drawable/green_rounded_background"
                            android:paddingStart="12dp"
                            android:paddingEnd="12dp"
                            android:paddingTop="4dp"
                            android:paddingBottom="4dp"
                            android:text="Completed"
                            android:textColor="#FFFFFF" />

                        <TextView
                            android:id="@+id/txtDate4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/txtPetName4"
                            android:text="August 5, 2024"
                            android:textColor="#444444" />

                        <TextView
                            android:id="@+id/txtTime4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/txtPetName4"
                            android:layout_alignParentEnd="true"
                            android:layout_marginEnd="10dp"
                            android:text="15:30"
                            android:textColor="#444444" />

                        <TextView
                            android:id="@+id/txtVaccine4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/txtDate4"
                            android:layout_marginTop="8dp"
                            android:text="FeLV Vaccine (Feline Leukemia)"
                            android:textStyle="bold"
                            android:textSize="16sp"
                            android:textColor="#000000" />

                        <TextView
                            android:id="@+id/txtClinic4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/txtVaccine4"
                            android:text="PetCare Veterinary Clinic"
                            android:textColor="#444444" />
                    </RelativeLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>
        </ScrollView>

        <!-- Add Schedule Button -->
        <Button
            android:id="@+id/btnAddSchedule"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:text="Add schedule"
            android:textAllCaps="false"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:background="@drawable/green_rounded_button" />
    </LinearLayout>
</FrameLayout>